def create_book_prices():
    books = {}
    sum = 0
    for _ in range(5):
        name = input("Inserire nome libro: ")
        price = float(input("Inserire prezzo: "))
        books[name]=price
        sum = sum + prezzo
    average = sum/5
    max_books = max(books, key= books.get)
    max_prices= books[max_books]
    print({"Titolo del libro pi√π costo:", max_books, "Prezzo del libro:", max_prices})
    return average


  
